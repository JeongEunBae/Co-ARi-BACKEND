{{>layout/header}}

<h1><strong>&nbsp;&nbsp;알림 등록</strong></h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="send_time">작성 시간</label>
                <input type="text" class="form-control" id="send_time" placeholder="작성 시간을 입력하세요">
            </div>
            <div class="form-group">
                <label for="read_mark">알림 읽음 표시</label>
                <input type="text" class="form-control" id="read_mark" placeholder="알림 읽음 여부를 입력하세요">
            </div>
            <div class="form-grup">
                <label for="visibility">알림 보이기</label>
                <input type="text" class="form-control" id="visibility" placeholder="알림 가시성을 입력하세요">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/footer}}