{{>layout/header}}

<h1>알림 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">알림 번호</label>
                <input type="text" class="form-control" id="alarm_id" value="{{alarms.alarm_id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{alarms.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" value="{{alarms.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" readonly>{{alarms.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="send_time">작성 시간</label>
                <input type="text" class="form-control" id="send_time" value="{{alarms.send_time}}" readonly>
            </div>
            <div class="form-group">
                <label for="read_mark">알림 읽음 표시</label>
                <input type="text" class="form-control" id="read_mark" value="{{alarms.read_mark}}">
            </div>
            <div class="form-group">
                <label for="visibility">알림 보이기</label>
                <input type="text" class="form-control" id="visibility" value="{{alarms.visibility}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}